{
    "name": "@hardjs/core",
    "version": "0.1.6",
    "description": "Core of HardJS",
    "scripts": {
        "build": "tsc && gulp build",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix",
        "release": "tsc && gulp build && npm publish ./core --tag=latest --access public",
        "release:test": "tsc && gulp build && npm publish ./core --tag=latest --access public --dry-run",
        "release:beta": "tsc && gulp build && npm publish ./core --tag=beta --access public"
    },
    "author": "Pavel Korshunov",
    "license": "ISC",
    "homepage": "https://github.com/hardjs/core#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hardjs/core.git"
    },
    "bugs": {
        "url": "https://github.com/hardjs/core/issues"
    },
    "keywords": [
        "hardjs",
        "framework"
    ],
    "dependencies": {
        "express": "^4.17.1",
        "express-handlebars": "^5.3.0",
        "typescript": "^4.2.4",
        "typeorm": "^0.2.32",
        "reflect-metadata": "^0.1.13",
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "@types/express": "^4.17.11",
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "@typescript-eslint/parser": "^4.21.0",
        "@types/lodash": "^4.14.169",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "gulp": "^4.0.2",
        "prettier": "^2.2.1"
    }
}
